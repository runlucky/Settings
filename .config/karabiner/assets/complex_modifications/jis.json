{
  "title": "JISキーボードを使いやすくする",
  "rules": [
    {
      "description": "「Home」キーを「Command + ←」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "home",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "「End」キーを「Command + →」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "end",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "テンキーの「+」を普通のキーコードにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_plus",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "テンキーの「-」を普通のキーコードにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_hyphen",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "hyphen"
            }
          ]
        }
      ]
    },
    {
      "description": "「Command + PageUp」を「Control + PageUp」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_up",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "「Command + PageDown」を「Control + PageDown」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_down",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "「左Windows」キーを「Control」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_gui",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ]
        }
      ]
    },
    {
      "description": "「左Ctrl」キーを「Command」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ]
        }
      ]
    },
    {
      "description": "「右Ctrl」キーを「Command」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ]
        }
      ]
    },
    {
      "description": "「半角全角」キーを「半角」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "lang2"
            }
          ]
        }
      ]
    },
    {
      "description": "「無変換」キーを「半角」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "international5",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "lang2"
            }
          ]
        }
      ]
    },
    {
      "description": "「変換」キーを「全角」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "international4",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "lang1"
            }
          ]
        }
      ]
    },
    {
      "description": "「カナ」キーを「全角」キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "international2",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "lang1"
            }
          ]
        }
      ]
    },
    {
      "description": "「円マーク」を「バックスラッシュ」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "international3",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "international3",
              "modifiers": [
                "left_alt"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "「PrintScreen」キーを「Command + Shift + 4」にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "print_screen",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "4",
              "modifiers": [
                "left_gui",
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}